<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent_lunch"
    android:background="@drawable/a"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Mouth-watering Lunch"
            android:textSize="35sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:onClick="lunch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img1"
                    android:background="@drawable/l"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Sweet Pea Risotto "
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="40sp"/>



                </LinearLayout>


            </LinearLayout> <!--end-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989393"
                android:layout_margin="10dp"/>



            <LinearLayout
                android:onClick="lunch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img2"
                    android:background="@drawable/ll"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Tomato Panzanella "
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="40sp"/>


                </LinearLayout>


            </LinearLayout> <!--end-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989393"
                android:layout_margin="10dp"/>


            <LinearLayout
                android:onClick="lunch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img3"
                    android:background="@drawable/lll"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Shaved Carrot and Radish Salad "
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="40sp"/>


                </LinearLayout>


            </LinearLayout> <!--end-->


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989393"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:onClick="lunch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img4"
                    android:background="@drawable/llll"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Grilled Leek Potato Salad "
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="40sp"/>


                </LinearLayout>


            </LinearLayout> <!--end-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989393"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:onClick="lunch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img5"
                    android:background="@drawable/lllll"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:text="Spinach and GruyÃ¨re Potato "
                        android:textColor="#ffff"
                        android:gravity="center"
                        android:textSize="40sp"/>


                </LinearLayout>


            </LinearLayout> <!--end-->



        </LinearLayout>


    </ScrollView>

</LinearLayout>